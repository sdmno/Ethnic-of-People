<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".back_3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#0B0A0A"
        android:textSize="50dp"
        android:text="풀업"/>

    <ImageView
        android:id="@+id/back3_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/pull_up"
        />

    <TextView
        android:id="@+id/back3_text"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/infomation"
        android:textColor="#0B0A0A"
        android:text="턱걸이\n자극 부위(광배근,대원근,승모근,능형근)"
        android:textSize="15dp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >
        <TableRow>

            <EditText
                android:id="@+id/back3_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="세트 수를 입력하세요"/>

            <Button
                android:id="@+id/back3_choose"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:textColor="#0B0A0A"
                app:backgroundTint="#A0DDA3"
                android:layout_height="wrap_content"
                android:text="담기"/>

        </TableRow>

    </TableLayout>

</LinearLayout>