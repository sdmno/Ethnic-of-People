<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".chest_1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#0B0A0A"
        android:textSize="50dp"
        android:text="푸쉬업"/>

    <ImageView
        android:id="@+id/chest1_image"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/push_up" />

    <RadioGroup
        android:id="@+id/chest1_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <RadioButton
            android:id="@+id/chest1_rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="플랫"
            />

        <RadioButton
            android:id="@+id/chest1_rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인클라인" />

        <RadioButton
            android:id="@+id/chest1_rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="디클라인" />

        <RadioButton
            android:id="@+id/chest1_rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="와이드" />
    </RadioGroup>

    <TextView
        android:id="@+id/chest1_text"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/infomation"
        android:textColor="#0B0A0A"
        android:textSize="15dp"
        android:text="일반적인 푸쉬업\n자극부위 : 대흉근 ( 주로 가슴근육 바깥부분 ), 삼각근 (어깨근육), 삼두근"
        />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >
        <TableRow>

            <EditText
                android:id="@+id/chest1_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="세트 수를 입력하세요"/>

            <Button
                android:id="@+id/chest1_choose"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#A0DDA3"
                android:textColor="#0B0A0A"
                android:text="담기"/>

        </TableRow>

    </TableLayout>

</LinearLayout>