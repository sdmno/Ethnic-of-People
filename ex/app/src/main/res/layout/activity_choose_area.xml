<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".choose_area">

    <Button
        android:id="@+id/chest"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="78dp"
        android:layout_marginRight="78dp"
        android:layout_marginBottom="46dp"
        android:text="가슴 운동"
        app:backgroundTint="@color/purple_700"
        app:layout_constraintBottom_toTopOf="@+id/stomach"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/lower_body"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:text="하체운동"
        app:layout_constraintBaseline_toBaselineOf="@+id/stomach"
        app:layout_constraintEnd_toStartOf="@+id/stomach"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/stomach"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="78dp"
        android:layout_marginRight="78dp"
        android:layout_marginBottom="63dp"
        android:text="복근 운동"
        app:layout_constraintBottom_toTopOf="@+id/choose_area_basket_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lower_body"
        app:layout_constraintTop_toBottomOf="@+id/chest" />

    <Button
        android:id="@+id/shoulder"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:text="어깨 운동"
        app:layout_constraintBaseline_toBaselineOf="@+id/choose_area_basket_button"
        app:layout_constraintEnd_toStartOf="@+id/choose_area_basket_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/choose_area_basket_button"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:text="장바구니"
        app:backgroundTint="#8BC34A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stomach" />

    <Button
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:text="등 운동"
        app:backgroundTint="@color/purple_700"
        app:layout_constraintBaseline_toBaselineOf="@+id/chest"
        app:layout_constraintEnd_toStartOf="@+id/chest"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        android:layout_marginBottom="61dp"
        android:text="운동부위 선택"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/chest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="138dp"
        android:layout_height="138dp"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginEnd="137dp"
        android:layout_marginRight="137dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/cbnu" />

</androidx.constraintlayout.widget.ConstraintLayout>