<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".abs_1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#0B0A0A"
        android:textSize="50dp"
        android:text="레그 레이즈"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:src="@android:drawable/ic_menu_camera"
        />

    <RadioGroup
        android:id="@+id/abs1_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <RadioButton
            android:id="@+id/abs1_rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="플랫"
            />

        <RadioButton
            android:id="@+id/abs1_rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="행잉" />

    </RadioGroup>

    <TextView
        android:id="@+id/abs1_text"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/infomation"
        android:textSize="15dp"
        android:textColor="#0B0A0A"
        android:text="일반적인 레그레이즈\n자극부위 : 하복부 및 복부 전체"
        />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >
        <TableRow>

            <EditText
                android:id="@+id/abs1_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="세트 수를 입력하세요"/>

            <Button
                android:id="@+id/abs1_choose"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0B0A0A"
                app:backgroundTint="#A0DDA3"
                android:text="담기"/>

        </TableRow>

    </TableLayout>


</LinearLayout>